[Unit]
Description=EzWeb scheduled backup
After=network.target

[Service]
Type=oneshot
User=ezweb
Group=ezweb
WorkingDirectory=/opt/ezweb
EnvironmentFile=/opt/ezweb/.env
ExecStart=/usr/bin/curl -s -X POST http://localhost:3000/backups/full -H "Cookie: token=${BACKUP_TOKEN}"
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ezweb-backup
